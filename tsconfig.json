{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "importHelpers": false,
    "noEmitHelpers": false,
    "removeComments": true,
    "sourceMap": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "lib": ["es2016", "dom"],
    "moduleResolution": "node",
    "allowJs": true,
    "module": "umd",
    "outDir": "./",
    "experimentalDecorators": true
  },
  "files": ["plugin.ts"],
  "exclude": ["node_modules"]
}
